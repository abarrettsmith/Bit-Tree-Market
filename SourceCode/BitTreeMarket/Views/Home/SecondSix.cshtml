@model BitTreeMarket.Models.SecondVm

<!-- Products Here -->
<section id="portfolio" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Products</h2>
                <h3 class="section-subheading text-muted">Products Title</h3>
            </div>
        </div>
        <br />
        <br />
        <hr />
        <div class="row">
            @foreach (var p in Model.Seconds)
            {
                <div class="col-md-4 col-sm-6 portfolio-item">
                    <div class="portfolio-hover">
                        <div class="portfolio-hover-content">
                            <img src="Images/@p.ImageLink" class="img-responsive" alt="">
                        </div>
                    </div>


                    <div class="portfolio-caption">
                        <h4>@p.Name</h4>

                    </div>
                    <p align="center">@Html.ActionLink("Details", "Details", "Home", new { id = p.Id }, "")</p>
                </div>

            }

        </div>
    </div>
    @*<div class="container">

            <div class="row">
            </div>
        </div>*@

</section>

<div align="right">
    <div class="container">
        <div class="row clearfix">
            <div class="col-md-12 column">
                <ul class="pagination">
                    <li>
                        <a href="~/Home/FirstSix">1</a>
                    </li>
                    <li>
                        <a href="~/Home/SecondSix">2</a>
                    </li>
                    <li>
                        <a href="~/Home/ThirdSix">3</a>
                    </li>
                    <li>
                        <a href="~/Home/FourthSix">4</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/Scripts/jquery.signalR-1.0.0.js"></script>
    <script type="text/javascript" src="~/signalr/hubs"></script>
    <script type="text/javascript" src="~/Scripts/common.js"></script>
    <script type="text/javascript" src="~/Scripts/app.js"></script>
}